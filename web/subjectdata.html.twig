<!DOCTYPE html>
<html lang="en">
	<head>
	  	<title>SubjectData</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

		<style>
			.custompanel{
				margin:15px;
			}

			.custompanel .custompanel-heading{
				padding:10px;
				border: 1px solid #dee2e6;
				min-height:50px;
				white-space: pre-line;
			}

			.custompanel-body{
				padding:15px;
				border:1px solid #dee2e6;
				min-height:57px;
				white-space: pre-line;
			}
		</style>
	</head>
	<body>
		{% set panel = [
						"color: #8a6d3b; background-color: #fcf8e3; border-color: #faebcc ",
						"color: #a94442; background-color: #f2dede; border-color: #ebccd1 ",
						"color: #31708f; background-color: #d9edf7; border-color: #bce8f1 ",
						"color: #3c763d; background-color: #dff0d8; border-color: #d6e9c6 ",
						"color: #fff; background-color: #337ab7; border-color: #337ab7 ",
						"color: #333; background-color: #f5f5f5; border-color: #ddd ",
						] %}

		{% if linkdata is defined and notesdata is defined and linkdata|length <= 0 and notesdata|length <= 0 %}
			<h4 align="center">No data found.</h4>
		{% endif %}
		<div class="container">
			{% if linkdata is defined and linkdata|length > 0 %}
				<table class="table table-bordered" style="margin:15px;">
					<thead>
						<tr>
							<th>Comment</th>
							<th>Link</th>
						</tr>
				    </thead>
				    <tbody>
				    	{% for links in linkdata %}
				    		<tr>
				    			<td>{{links.comments}}</td>
				    			<td>{{links.link}}</td>
				    		</tr>
				    	{% endfor %}
				    </tbody>
				</table>
			{% endif %}
			{% if notesdata is defined and notesdata|length > 0 %}
				{% for notes in notesdata %}

					<div class="custompanel">
				        <div class="custompanel-heading" style="{{random(panel)}}">{{notes.comments}}</div>
				        <div class="custompanel-body">{{notes.notes}}</div>
				    </div>

				{% endfor %}
			{% endif %}
		</div>
	</body>
</html>


